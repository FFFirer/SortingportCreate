<Window x:Class="SortingportCreate.VIews.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SortingportCreate.VIews"
        mc:Ignorable="d"
        Title="添加/编辑分拣口" Height="110.666" Width="499.332" Loaded="Window_Loaded">
    <Grid Name="g1">
        <Label Content="起始光电:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="-0.081,0.426" Margin="10,10,0,0"/>
        <TextBox Name="txtStartPoint" HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" Text="{Binding Path=StartPoint}" VerticalContentAlignment="Center" Width="62" Margin="76,12,0,45" />
        <Label Content="下料口个数:" HorizontalAlignment="Left"  VerticalAlignment="Top" RenderTransformOrigin="0.52,0.013" Margin="158,10,0,0"/>
        <TextBox Name="txtPortCount" HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" Text="{Binding Path=PortCount}" VerticalContentAlignment="Center" Width="62" Margin="236,12,0,45" />
        <Label Content="下料口方向:" HorizontalAlignment="Left"  VerticalAlignment="Top" RenderTransformOrigin="0.52,0.013" Margin="316,10,0,0"/>
        <TextBox Name="txtExportSide" HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" Text="{Binding Path=ExportSide}" VerticalContentAlignment="Center" Width="62" Margin="394,12,0,45" />
        <Button Content="确认" HorizontalAlignment="Left" Margin="203,51,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
